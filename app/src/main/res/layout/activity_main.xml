<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_horizontal1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <TextView
        android:id="@+id/main_tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <View
        android:id="@+id/main_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/main_tv_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/main_divider">
        <Button
            android:id="@+id/main_b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/infektion"
            android:layout_margin="2dp"
            android:background="@drawable/menubutton"/>

        <Button
            android:id="@+id/main_b11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blodgas"
            android:layout_margin="2dp"
            android:background="@drawable/menubutton"/>

        <Button
            android:id="@+id/main_b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/v_tska_och_elektrolyter"
            android:layout_margin="2dp"
            android:background="@drawable/menubutton"/>

        <!--
        <Button
            android:id="@+id/main_b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/diabetes"
            android:layout_margin="2dp"
            android:background="@drawable/menubutton"/>

        <Button
            android:id="@+id/main_b4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abcde"
            android:layout_margin="2dp"
            android:background="@drawable/menubutton"/>
        -->
        <Button
            android:id="@+id/main_b5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hlr"
            android:layout_margin="2dp"
            android:background="@drawable/menubutton"/>

        <Button
            android:id="@+id/main_b6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Akut buk"
            android:layout_margin="2dp"
            android:background="@drawable/menubutton"/>

        <Button
            android:id="@+id/main_b7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bröstsmärta"
            android:layout_margin="2dp"
            android:background="@drawable/menubutton"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>